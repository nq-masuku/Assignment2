<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/material_dynamic_neutral_variant90"
    android:layout_margin="8dp"
    tools:context=".MainActivity"
    >


    <Space android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dd_logo"
        android:layout_gravity="center"
        android:contentDescription="image"/>

    <Space android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/msg"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/burger"
        android:textStyle="bold"
        android:textSize="31sp" />

    <Space android:layout_width="match_parent"
        android:layout_height="190dp"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="260sp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:hint="@string/edText"
        android:textSize="25sp" />


    <Button
        android:id="@+id/button"
        android:layout_width="274dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:onClick="click"
        android:text="ADD FOOD"
        android:textSize="20sp"
        app:backgroundTint="@color/material_dynamic_secondary30" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="95dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="437dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/material_dynamic_secondary30"
        android:onClick="click2"
        android:text="DECIDE!"
        android:textSize="20sp"
        app:backgroundTint="@color/material_dynamic_secondary30" />
</LinearLayout>